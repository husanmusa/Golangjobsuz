# Bot and webhook configuration
BOT_TOKEN=changeme-bot-token
WEBHOOK_URL=https://example.com/webhook
WEBHOOK_SECRET=changeme-webhook-secret

# Database
DATABASE_DSN=postgres://user:password@localhost:5432/golangjobsuz?sslmode=disable

# Discord channel and admin access
CHANNEL_ID=changeme-channel-id
ADMIN_IDS=1234567890,2345678901

# AI providers
AI_PROVIDER=openai
AI_MODEL=gpt-4o
AI_FALLBACK_PROVIDER=anthropic
AI_FALLBACK_MODEL=claude-3-5-sonnet
AI_API_KEY=changeme-ai-api-key

# Content limits
MAX_FILE_BYTES=10485760
MAX_FILE_TYPES=.pdf,.docx,.txt
MAX_MESSAGE_BYTES=5000

# Storage and runtime
TEMP_STORAGE_PATH=/tmp/golangjobsuz
REQUEST_TIMEOUT_SECONDS=30
RESPONSE_TIMEOUT_SECONDS=120
